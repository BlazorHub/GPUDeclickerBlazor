@inject Data.AppState  AppState

<div class="card mb-2">
    <h4 class="card-title">Settings</h4>

    <div class="card-body container">
        <div class="row">
            <div class="col-sm">
                <p>Threshold : @AppState.Threshold</p>
                <input type="range" class="custom-range" min="0.5" max="15" step="0.1" @bind-value="@AppState.Threshold" />
            </div>
            <div class="col-sm">
                <p>Max repair length : @AppState.MaxLength</p>
                <input type="range" class="custom-range" min="1" max="350" step="1" @bind-value="@AppState.MaxLength" />
            </div>
        </div>
    </div>
</div>
