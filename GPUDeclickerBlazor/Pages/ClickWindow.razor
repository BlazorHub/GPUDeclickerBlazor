    private void SetBorderColour()
    {
        _borderColor = Click.Aproved
            ? "aqua"
            : "yellow";
    }

    /// <summary>
    ///     Forms polylines that show input and output audio samples
    /// </summary>
    private void SetPolylines()
    {
        if (_input.Points is null || _output.Points is null)
            return;

        // clear polylines
        _input.Points.Clear();
        _output.Points.Clear();

        // calculate position in audio track to show click
        //in the center of this CW
        var clickWindowStartPosition = (int)(
            Click.Position +
            Click.Length / 2 -
            Width / 2);

        // set Input polylyne
        for (var x = 0; x < Width; x++)
        {
            var inputSample= Click.GetInputSample(clickWindowStartPosition + x);
            var inputSampleY = Height * (-inputSample + 1) / 2;
            _input.Points.Add(new PointF(x, inputSampleY));
        }

        // set Output polyline two samples wider than click width
        var relativeClickPositionInClickWindow = Click.Position - clickWindowStartPosition;
        for (var x = relativeClickPositionInClickWindow - 1;
            x <= relativeClickPositionInClickWindow + Click.Length + 1;
            x++)
        {
            var outputSample = Click.GetOutputSample(clickWindowStartPosition + x);
            var outputSampleY = Height * (-outputSample + 1) / 2;
            _output.Points.Add(new PointF(x, outputSampleY));
        }
    }

